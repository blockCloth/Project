<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--用户登录验证-->
    <servlet>
        <servlet-name>userLoginServlet</servlet-name>
        <servlet-class>com.jxgmxy.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userLoginServlet</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>
    <!--用户注册验证-->
    <servlet>
        <servlet-name>userRegistServlet</servlet-name>
        <servlet-class>com.jxgmxy.controller.UserRegistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegistServlet</servlet-name>
        <url-pattern>/registUser</url-pattern>
    </servlet-mapping>
    <!--商品购买-->
    <servlet>
        <servlet-name>buyGoodServlet</servlet-name>
        <servlet-class>com.jxgmxy.controller.BuyGoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>buyGoodServlet</servlet-name>
        <url-pattern>/buyGoods</url-pattern>
    </servlet-mapping>
    <!--用户保存-->
    <servlet>
        <servlet-name>saveVipServlet</servlet-name>
        <servlet-class>com.jxgmxy.controller.SaveVipServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveVipServlet</servlet-name>
        <url-pattern>/saveVip</url-pattern>
    </servlet-mapping>
</web-app>